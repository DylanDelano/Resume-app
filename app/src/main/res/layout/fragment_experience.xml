<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/modern_background_with_lines__1_"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ExperienceFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:text="Experience"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Projects"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/project_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_2"
            android:layout_marginTop="140dp"
            style="@style/Textappearance"
            android:layout_marginLeft="16dp"
            android:text="As part of implementing projects, i have done various projects some of which are personal and another of which was a task required under GADS Programme. The link of my Github will be below
          "
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/social_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/project_summary"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginLeft="16dp"
            android:text="Social Links"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/link_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/social_links"
            android:layout_marginTop="310dp"
            style="@style/Textappearance"
            android:layout_marginLeft="16dp"
            android:text="https://github.com/DylanDelano/"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/link_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/link_1"
            android:layout_marginTop="360dp"
            style="@style/Textappearance"
            android:layout_marginLeft="16dp"
            android:text="https://twitter.com/DylanMwangi1/"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/company_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/link_2"
            android:layout_marginTop="525dp"
            android:textStyle="italic"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="Company Role"/>
        <TextView
            android:id="@+id/company_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@id/company_info"
            android:layout_marginTop="555dp"
            android:text="I am a Junior Android Developer looking for an opportunity to learn and showcase my skills. I love what i do and i am motivated to bring out innovative ideas. I'm open to any ideas  people  would put on the table because i'm a team player . I can work under pressure and consistent in what i do until i achieve my end goal. "
            android:layout_marginLeft="35dp"
            style="@style/Textappearance"/>


        <!-- TODO: Update blank fragment layout -->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="32dp"
            android:backgroundTint="#263238">

            <ImageView
                android:id="@+id/work_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_work"
                app:tint="#304FFE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/work_exp"
                android:layout_marginLeft="40dp"
                android:text="Junior Android Developer- Oct 2022- Now (Open Source Project- Space ya Tech)"
                android:textColor="#fff"
                style="@style/Textappearance"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="32dp"
            android:backgroundTint="#263238">

            <ImageView
                android:id="@+id/work_exp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_work"
                app:tint="#304FFE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/work_exp"
                android:layout_marginLeft="40dp"
                android:text="Trainee Android Development- July 2021-May 2022(Google Africa Developer Scholarship(GADS) "
                android:textColor="#fff"
                style="@style/Textappearance"/>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>








